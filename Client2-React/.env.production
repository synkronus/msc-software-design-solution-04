# PoliMarket React App Environment Configuration
# Production Environment

# API Configuration
REACT_APP_API_BASE_URL=https://api.polimarket.com/api
REACT_APP_API_TIMEOUT=15000

# Application Configuration
REACT_APP_NAME=PoliMarket Sales App
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Feature Flags
REACT_APP_ENABLE_DEBUG_LOGS=false
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_NOTIFICATIONS=true

# UI Configuration
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_UPLOAD_SIZE=5242880
REACT_APP_THEME=light

# Business Rules
REACT_APP_MAX_DISCOUNT_PERCENTAGE=20
REACT_APP_TAX_RATE=0.19
REACT_APP_CURRENCY=COP
REACT_APP_CURRENCY_SYMBOL=$

# Pagination
REACT_APP_DEFAULT_PRODUCTS_PAGE_SIZE=50
REACT_APP_DEFAULT_SALES_PAGE_SIZE=20
REACT_APP_DEFAULT_DELIVERIES_PAGE_SIZE=15

# Timeouts and Intervals
REACT_APP_HEALTH_CHECK_INTERVAL=60000
REACT_APP_AUTO_REFRESH_INTERVAL=120000
REACT_APP_SESSION_TIMEOUT=1800000

# Development Tools (disabled in production)
REACT_APP_SHOW_REDUX_DEVTOOLS=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
